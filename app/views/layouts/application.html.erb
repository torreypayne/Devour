<!DOCTYPE html>
<html>
<head>
  <title>Devour</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= link_to "Log Out", session_url, method: :delete %>
  <% else %>
    <%= link_to "Log In", new_session_url %>
  <% end %>

  <div id="main">
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <%= error %>
        <% end %>
      <% end %>
    <%= yield %>
  </div>

</body>
</html>
