<form class="user user-login form form-horizontal" action="/session" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="login-bars user-login container-fluid">
    <% if flash[:errors] %>
      <div class="form-group has-error">
        <label for="email" class="label label-danger"><%= flash[:errors] %></label><br>
        <div class="col-xs-offset-3 col-xs-6 col-xs-offset-3">
          <input type="text" class="form-control" id="email" name="user[email]" placeholder="Email">
        </div>


        <div class="col-xs-offset-3 col-xs-6 col-xs-offset-3">
          <input type="password" class="form-control" name="user[password]" id="password" placeholder="password">
        </div>

        <div class="col-xs-offset-3 col-xs-6 col-xs-offset-3">
          <button class="btn btn-block btn-new-user btn-default">Log In</button>
          <a href="/users/new" class="btn btn-new-user btn-block btn-default">New User</a>
          <a href="/users/guest" class="btn btn-new-user btn-block btn-default">Guest Login</a>
        </div>
      </div>


    <% else %>
      <div class="form-group">
        <div class="col-xs-offset-3 col-xs-6">
          <input type="text" class="form-control" id="email" name="user[email]" placeholder="Email">
        </div>


        <div class="col-xs-offset-3 col-xs-6">
          <input type="password" class="form-control" name="user[password]" id="password" placeholder="password">
        </div>

        <div class="col-xs-offset-3 col-xs-6">
          <button class="btn btn-new-user btn-block btn-default">Log In</button>
          <a href="/users/new" class="btn btn-new-user btn-block btn-default">New User</a>
          <a href="/users/guest" class="btn btn-new-user btn-block btn-default">Guest Login</a>
          <a href="/password_reset/new" class="btn btn-new-user btn-block btn-default">Forgot Password?</a>
        </div>
      </div>

      <% end %>
  </div>

</form>
