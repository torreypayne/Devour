<div class="container">

  <h1>Leaderboard (Of course, no one will catch up with Torrey... :) )</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>User (by email)</th>
        <th>Score</th>
      </tr>
    </thead>
    <tbody>
      <% _(leaderboard.attributes.users).each(function(user) { %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.score %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
