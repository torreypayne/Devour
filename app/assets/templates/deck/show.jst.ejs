<div class="deck-show">

  <aside class="col-xs-2 quiz-sizebar">
    <input type="hidden" id="deck-owner" data-owner-id="<%=deck.get('owner_id')%>" name="name" value="">
    <h2 class="col-xs-12 sidebar-header" style="color: black;"><%= deck.escape('title') %><span style="color: tomato;" class="fa fa-heart"></span></h2>
    <div class="row">
      <button type="button" class="btn btn-default go-to-data col-xs-12">See your data!</button>
    </div>
    <div class="row">
      <button type="button" class="btn btn-default go-to-add-cards col-xs-12">Add Cards</button>
    </div>
    <div class="row controls">
      <h3>Controls:</h3>
      <div class="space-bar">
        <img src="http://www.wpclipart.com/computer/keyboard_keys/large_keys/computer_key_Space_bar_T.png" width="100" height="40" alt="spacekey">
        <span class="space-key-control" style="color: white;">: Reveal Card</span><br>
      </div>
      <div class="number-keys">
        <img src="http://www.typingguide.com/images/keyboard-numberpad.gif" width="100" height="40" alt="spacekey">
        <span class="number-key-control" style="color: white;">0-5 keys to submit your response!</span>
      </div>
    </div>
  </aside>

  <div class="deck cards-list cards-show quiz quiz-index col-md-5" id="quiz"></div>
</div>
