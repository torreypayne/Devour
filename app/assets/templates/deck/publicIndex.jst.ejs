<ul class="deck-list">
  <div class="jumbotron">
    <h1>Time to eat!</h1>
    <p>Public Directory: Fork any decks of your liking, and they will be added to Your Collection.</p>
  </div>


  <form class="form-inline list-group">
    <% decks.each(function(deck) { %>
      <div class="list-group-item">
        <button class="btn btn-danger btn-small delete-deck" data-deck-id="<%=deck.id%>"><span class="glyphicon glyphicon-remove"></span></button>
        <a href="#decks/<%=deck.id%>">
          <h2 class="page-header">
            <%= deck.escape('title') %>
          </h2>
        </a>
        <button type="submit" data-deck-id="<%=deck.id%>" class="btn btn-default btn-block">Add <%= deck.escape('title') %> to Your Collection</button>
      </div>
    <% }); %>
  </form>
</ul>
